{% block content %}
  <div class="card mb-4 shadow">
    <div class="card-body">
      <p>{{ feedback.note }}
      </p>
      <div class="d-flex justify-content-between">
        <small>author:
          {{ feedback.author.username }}
        </small>
        {% if feedback.author == userId %}
          <form action="/feedback/delete/{{workout.id}}/{{workout.id}}?_method=DELETE" method="POST">
            <input class="btn btn-danger" type="submit" value="X">
          </form>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
