{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <div class="cardNew">
      <article>
        <h2>
          {{ workout.name}}
        </h2>
        <h3>Description:
          {{ workout.description }}
        </h3>
        <h3>Difficulty:
          {{ workout.difficulty }}
        </h3>
        {% if workout.owner == userId %}
          <div class="btn-group">

            <a href="/workouts/{{ workout.id }}/edit" class="btn btn-primary" id="edit">Edit</a>
            <form action="/workouts/{{ workout.id }}?_method=DELETE" method="POST">
              <input type="submit" value="Delete" class="btn btn-danger" id="delete">
            </form>
          </div>
        {% endif %}
      </article>
    </div>
  </div>
  <br>
  <br>
  <div class="container-md">
    {% if loggedIn %}
      <div class="addFeedbackContainer">
        <form action="/feedback/{{workout.id}}" method="POST" class="formCardNew">
          <fieldset>
            <legend>Feedback? Drop a comment below</legend>
            <br>
            <input class="form-control mb-1" type="text" placeholder="enter your feedback..." name="note" required>
          </fieldset>
          <div id="addFeedback">
            <input class="btn btn-success" type="submit" value="Post feedback">
          </div>
          <br>
          <br>
          <br>
          {%- comment -%}
            <h6>Here's what other users are saying:</h6>
          {%- endcomment -%}
        </form>
      </div>
    {% else %}
      <div class="col-md-6">
        <small>If you'd like to leave feedback, please log in...</small>
      </div>
    {% endif %}
  </div>
  <div class="container-md">
    {% if workout.feedback.length > 0%}
      <br>
      <br>
      <div class="container-sm">
        <div>
          {% for feedback in workout.feedback %}
            {% render '../feedback.liquid', feedback: feedback, userId: userId, workout: workout %}
          {% endfor %}
        </div>
      </div>
      <hr>
      {% else %}
    {% endif %}
  </div>
{% endblock %}
