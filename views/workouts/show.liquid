{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <article>
      <h2>
        {{ workout.name}}
        -
      </h2>
      <h3>Difficulty:
        {{ workout.difficulty }}
      </h3>
      <h6>Description:
        {{ workout.description }}
      </h6>
      {% if workout.owner == userId %}
        <div class="btn-group">

          <a href="/workouts/{{ workout.id }}/edit" class="btn btn-primary">Edit</a>
          <form action="/workouts/{{ workout.id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn btn-danger">
          </form>
        </div>
      {% endif %}
    </article>
  </div>
{% endblock %}
